<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action for Command Management -->
    <record id="action_gestion_commandes" model="ir.actions.act_window">
        <field name="name">Commandes</field>
        <field name="res_model">gestion.commande</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Commande
            </p>
            <p>
                Manage your commandes efficiently here.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="gestion_commandes_menu" name="Gestion Commerciale" sequence="10"/>
    <menuitem id="gestion_commandes_menu_items" name="Commandes" 
        parent="gestion_commandes_menu" action="action_gestion_commandes"/>
</odoo>
